<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--описание бина connectionPool-->
    <bean id="pool1" name="p1,p3,p4" class="com.dmdevstudy.lessons.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" ref="driver"/>
        <constructor-arg index="1" name="poolSize" type="java.lang.Integer" value = "10"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg1=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties" type="java.util.Map">
            <map>
                <entry key="url" value-ref="driver"/>
                <entry key="password" value="1234"/>
            </map>
        </constructor-arg>
    </bean>

    <!--описание бина driver-->
    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <!--описание бина companyRepository зависимости через фабричный метод-->
    <bean id="companyRepository" class="com.dmdevstudy.lessons.service.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/> <!--инжектим в него другой  bean по id-->
    </bean>


</beans>